@{
  Layout = "_Layout";
}

@model FactorySpace.Models.Machine

<h2>Add an engineer</h2>

<h4>Assign an engineer to this machine: @Html.DisplayFor(model => model.MachineName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to machine list", "Index")</p>